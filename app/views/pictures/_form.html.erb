<%= form_for(@picture) do |f| %>
  <% if @picture.errors.any? %>
    <div id="error_explanation">
      <h2><%= @picture.errors.count %>件のエラーが発生しています。</h2>

      <ul>
      <% @picture.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label :タイトル %>
  <%= f.text_field :title, class: "form-control" %>
  <br>
  <%= f.label :内容 %>
  <%= f.text_field :content, class: "form-control" %>
  <br>
  <div class="field">
  <%= image_tag @picture.image.url if @picture.image? %>
  <%= f.file_field :image %>
  <%= f.hidden_field :image_cache %>
  </div>
  <br />
  <%= f.submit "投稿", class: "btn btn-primary btn-block" %>
<% end %>

<%= link_to "写真投稿一覧に戻る", pictures_path %>
